    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheFolks">
        <activity android:name=".presentation.upgrade.UpgradeP3Activity"></activity>
        <activity android:name=".presentation.upgrade.UpgradeP2Activity" />
        <activity android:name=".presentation.upgrade.UpgradeP1Activity" />
        <activity android:name=".presentation.upgrade.PhotoReviewActivity" />
        <activity android:name=".presentation.upgrade.PhotoSelfieActivity" />
        <activity android:name=".presentation.upgrade.PhotoKtpActivity" />
        <activity android:name=".presentation.access.ForgetActivity" />
        <activity android:name=".presentation.access.RegisterActivity" />
        <activity android:name=".presentation.access.LoginActivity" />
        <activity android:name=".presentation.init.WelcomeActivity" />
        <activity android:name=".presentation.init.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>